<!--!<?xml version="1.0" encoding="iso-8859-1"?>-->
<tal:block metal:define-macro="main">
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
    <head>
        <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
        <link type="text/css" href="css/bootstrap-responsive.min.css" rel="stylesheet">
        <link type="text/css" href="css/style.css" rel="stylesheet">
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Inject the URL prefix from Chameleon's docs_pages['overview']
                var prefix = "${docs_pages['overview']|escapejs}";

                // Regular expression to match 'CC_' followed by uppercase letters or underscores
                var regex = /\b(CC_[A-Z_]+)\b/g;

                // Select all elements within the body
                var elements = document.querySelectorAll('body *');

                elements.forEach(function(element) {
                    element.childNodes.forEach(function(child) {
                        if (child.nodeType === Node.TEXT_NODE) {
                            var matches = child.nodeValue.match(regex);
                            if (matches) {
                                // Replace matched patterns with linked <code> elements
                                var newHTML = child.nodeValue.replace(regex, function(match) {
                                    return '<a href="' + prefix + '#' + match + '"><code>' + match + '</code></a>';
                                });
                                // Create a new span element to hold the transformed HTML
                                var span = document.createElement('span');
                                span.innerHTML = newHTML;
                                // Replace the original text node with the new span
                                element.replaceChild(span, child);
                            }
                        }
                    });
                });
            });
        </script>
    </head>
    <body>
        <div class="container">
            <ul>
                <li>
                    <a href="${docs_pages.overview}">Overview</a>
                </li>
                <li>
                    <a href="${docs_pages.vehicle_authors}">For Vehicle Authors</a>
                </li>
                <li>
                    <a href="${docs_pages.industry_authors}">For Industry Authors</a>
                </li>
            </ul>
        </div>
        <div class="container">
            <metal:block define-slot="body">
                <p>Ooooops - there is no content for some reason. Something has probably gone nuts in the build. </p>
            </metal:block>
        </div>
        <div style="margin-top:30px; text-align:center; color:#999; padding:5px; background-color:#eee; border-top:solid 1px #ddd; box-shadow: inset 0px 1px 1px #ddd">
            With thanks to all who helped
        </div>
    </body>
</html>
</tal:block>










