<!--!<?xml version="1.0" encoding="iso-8859-1"?>-->
<tal:block metal:define-macro="main">
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
    <head>
        <link type="text/css" href="css/bootstrap.min.css" rel="stylesheet">
        <link type="text/css" href="css/style.css" rel="stylesheet">
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Inject the URL prefix from Chameleon's docs_pages['overview']
                var prefix = "${docs_pages['overview']|escapejs}";

                // Regular expression to match 'CC_' followed by uppercase letters or underscores
                var regex = /\b(CC_[A-Z_]+)\b/g;

                // Select all elements within the body
                var elements = document.querySelectorAll('body *');

                elements.forEach(function(element) {
                    element.childNodes.forEach(function(child) {
                        if (child.nodeType === Node.TEXT_NODE) {
                            var matches = child.nodeValue.match(regex);
                            if (matches) {
                                // Replace matched patterns with linked <code> elements
                                var newHTML = child.nodeValue.replace(regex, function(match) {
                                    return '<code><a href="' + prefix + '#' + match + '">' + match + '</a></code>';
                                });
                                // Create a new span element to hold the transformed HTML
                                var span = document.createElement('span');
                                span.innerHTML = newHTML;
                                // Replace the original text node with the new span
                                element.replaceChild(span, child);
                            }
                        }
                    });
                });
            });
        </script>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                document.querySelectorAll("table.sortable th").forEach(header => {
                    header.addEventListener("click", () => {
                        const table = header.closest("table");
                        const columnIndex = Array.from(header.parentNode.children).indexOf(header);
                        const type = header.getAttribute("data-type");
                        const isAsc = table.getAttribute("data-sort") !== "asc";
                        const rows = Array.from(table.querySelector("tbody").rows);

                        // Remove sorted classes from all headers
                        header.parentNode.querySelectorAll("th").forEach(th => th.classList.remove("sorted-asc", "sorted-desc"));

                        // Add sorted class to the current header
                        header.classList.add(isAsc ? "sorted-asc" : "sorted-desc");

                        rows.sort((a, b) => {
                            let aVal = a.cells[columnIndex].innerText;
                            let bVal = b.cells[columnIndex].innerText;
                            if (type === 'number') {
                                aVal = parseFloat(aVal) || 0;
                                bVal = parseFloat(bVal) || 0;
                            }
                            return isAsc ? (aVal > bVal ? 1 : -1) : (aVal < bVal ? 1 : -1);
                        });

                        rows.forEach(row => table.querySelector("tbody").appendChild(row));
                        table.setAttribute("data-sort", isAsc ? "asc" : "desc");
                    });
                });
            });
        </script>
    </head>
    <body>
        <div class="hero fox-bg-blue">
            <div class="container pt-3 pb-1">
                <h1 class="display-6">FIRS-Compatible Cargo Class Scheme</h1>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg fox-bg-blue" style="border-bottom: solid 1px black;">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-light text-decoration-underline"
                           href="${docs_pages.overview}">Overview</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light text-decoration-underline"
                           href="${docs_pages.vehicle_authors}">For Vehicle Authors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light text-decoration-underline"
                           href="${docs_pages.industry_authors}">For Industry Authors</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container pt-5 pb-5">
            <metal:block define-slot="body">
                <p>Ooooops - there is no content for some reason. Something has probably gone nuts in the build. </p>
            </metal:block>
        </div>
        <div style="text-align:center; color:#999; padding:5px; background-color:#eee; border-top:solid 1px #ddd; box-shadow: inset 0px 1px 1px #ddd">
            With thanks to all who helped
        </div>
    </body>
</html>
</tal:block>










